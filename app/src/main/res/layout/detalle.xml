<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/ivFoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvDireccion"
        android:layout_toEndOf="@+id/ivFoto"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivFoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvPrecio"
        android:layout_alignEnd="@+id/tvDireccion"
        android:layout_below="@+id/tvDireccion"
        android:layout_toRightOf="@+id/ivFoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvTipo"
        android:layout_toEndOf="@+id/ivFoto"
        android:layout_below="@+id/tvPrecio"
        android:layout_toRightOf="@+id/ivFoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvLocalidad"
        android:layout_toEndOf="@+id/ivFoto"
        android:layout_below="@+id/tvTipo"
        android:layout_toRightOf="@+id/ivFoto" />
</RelativeLayout>